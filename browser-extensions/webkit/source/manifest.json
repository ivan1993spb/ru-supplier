{
	"manifest_version": 2,
	"name": "Внимательный Поставщик",
	"version": "1.0",
	"description": "Позволяет генерировать ссылки для подписки на закупки",

	"page_action": {
		"default_icon": {
			"19": "eagle.ico"
		},
		"default_title": "Генерировать ссылку",
		"default_popup": "popup.html"
	},

	"author": "Pushkin Ivan <pushkin13@bk.ru>",

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"minimum_chrome_version": "22",

	"options_page": "options.html",

	"permissions": [
		"tabs",
		"storage",
		"webNavigation",
		"clipboardWrite"
	]
}